<%- include ('partials/header.ejs') %>
<body>
    <%- include ('partials/navbar.ejs') %> 
    
    <div class="container">
        <hr>
        <h1>Questions</h1>
        <br>
        <a href="/ask" class="btn btn-dark">Ask a question</a>
        <hr>
        <br>
        <% questions.forEach(question => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <h3> <%= question.title  %></h3>
                </div>
                <div class="card-footer">
                    <a href="/ask/<%= question.id %>"><button class="btn btn-dark">Answer</button></a>
                </div>
            </div>
       <% }) %>

    </div>
</body>
<%- include ('partials/footer.ejs') %>

